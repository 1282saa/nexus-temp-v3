# NEXUS SERVICE CONFIGURATION TEMPLATE
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git

# API 설정 - 백엔드 배포 후 얻은 엔드포인트를 입력하세요
VITE_API_BASE_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE
VITE_WS_URL=wss://YOUR_WEBSOCKET_API_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE

# AWS API Gateway - 서비스 엔드포인트 (위와 동일한 값 사용)
VITE_API_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE
VITE_PROMPT_API_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE
VITE_WEBSOCKET_URL=wss://YOUR_WEBSOCKET_API_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE
VITE_USAGE_API_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE
VITE_CONVERSATION_API_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE
VITE_REST_API_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/YOUR_STAGE

# AWS Cognito 설정 - 자신의 Cognito User Pool 정보 입력
VITE_AWS_REGION=us-east-1
VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_COGNITO_CLIENT_ID=YOUR_COGNITO_CLIENT_ID

# PDF.js CDN
VITE_PDFJS_CDN_URL=https://cdnjs.cloudflare.com/ajax/libs/pdf.js

# 개발/테스트 설정
VITE_USE_MOCK=false

# Service Type
VITE_SERVICE_TYPE=dev

# Organization Settings - 귀하의 조직 정보로 변경하세요
VITE_ADMIN_EMAIL=admin@yourcompany.com
VITE_COMPANY_DOMAIN=@yourcompany.com

# SSO 설정 (선택사항)
VITE_SSO_ALLOWED_ORIGINS=
VITE_COOKIE_DOMAIN=
VITE_STORAGE_PREFIX=nexus_