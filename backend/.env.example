# ===================================
# Nexus Backend 환경변수 예제
# ===================================
# 이 파일을 복사해서 .env.dev, .env.staging, .env.prod로 만드세요
# 실제 값은 절대 Git에 커밋하지 마세요!

# ===================================
# 기본 설정
# ===================================
# 서비스 이름 (테이블명, Lambda 함수명에 사용)
SERVICE_NAME=nexus

# 환경 (dev, staging, prod)
ENVIRONMENT=dev

# 스택 접미사 (리소스 구분용)
STACK_SUFFIX=dev

# AWS 리전
AWS_REGION=us-east-1

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===================================
# AWS 설정
# ===================================
# AWS 계정 ID (선택사항)
AWS_ACCOUNT_ID=

# API Gateway ID (자동 생성되면 비워둠)
REST_API_ID=
WEBSOCKET_API_ID=

# API 스테이지
API_STAGE=dev

# ===================================
# DynamoDB 테이블 (선택사항)
# ===================================
# 비워두면 자동 생성: {SERVICE_NAME}-{table}-{STACK_SUFFIX}
CONVERSATIONS_TABLE=
PROMPTS_TABLE=
USAGE_TABLE=
FILES_TABLE=
WEBSOCKET_TABLE=

# ===================================
# Amazon Bedrock 설정
# ===================================
# Claude 4.1 Opus 모델 ID
BEDROCK_MODEL_ID=us.anthropic.claude-opus-4-1-20250805-v1:0

# 최대 토큰 수
BEDROCK_MAX_TOKENS=4096

# Temperature (0-1, 낮을수록 일관성 높음)
BEDROCK_TEMPERATURE=0.7

# 타임아웃 (초)
BEDROCK_TIMEOUT=120

# ===================================
# Guardrail 설정 (선택사항)
# ===================================
# Guardrail 활성화
GUARDRAIL_ENABLED=false

# Guardrail ID (AWS Bedrock Guardrails에서 생성)
GUARDRAIL_ID=

# Guardrail 버전
GUARDRAIL_VERSION=1

# ===================================
# 엔진 타입 설정
# ===================================
# 기본 엔진 타입
DEFAULT_ENGINE_TYPE=11

# 보조 엔진 타입
SECONDARY_ENGINE_TYPE=22

# 사용 가능한 엔진 타입 (쉼표로 구분)
AVAILABLE_ENGINES=11,22,33

# ===================================
# API 제한 설정
# ===================================
# Rate Limit (요청/초)
API_RATE_LIMIT=100

# Burst Limit
API_BURST_LIMIT=200

# Throttle 활성화
API_THROTTLE_ENABLED=false

# ===================================
# WebSocket 설정
# ===================================
# 유휴 타임아웃 (초)
WEBSOCKET_IDLE_TIMEOUT=600

# 최대 연결 수
WEBSOCKET_MAX_CONNECTIONS=100

# ===================================
# 캐싱 설정
# ===================================
# 캐시 TTL (초)
CACHE_TTL=300

# 캐시 활성화
ENABLE_CACHE=true

# ===================================
# 토큰 제한
# ===================================
# 최대 입력 토큰
MAX_INPUT_TOKENS=2000

# 최대 출력 토큰
MAX_OUTPUT_TOKENS=2000

# 최대 대화 길이 (메시지 수)
MAX_CONVERSATION_LENGTH=20

# ===================================
# 디버그 설정
# ===================================
# 디버그 모드
DEBUG=false

# X-Ray 추적
ENABLE_XRAY=false

# 프로파일링
ENABLE_PROFILING=false

# ===================================
# CORS 설정
# ===================================
# 허용된 출처 (쉼표로 구분)
CORS_ORIGINS=*

# 자격증명 포함
CORS_CREDENTIALS=false

# ===================================
# 기능 플래그
# ===================================
# 스트리밍 활성화
ENABLE_STREAMING=true

# 파일 업로드 활성화
ENABLE_FILE_UPLOAD=true

# 사용량 추적 활성화
ENABLE_USAGE_TRACKING=true

# 대화 기록 활성화
ENABLE_CONVERSATION_HISTORY=true

# 프롬프트 관리 활성화
ENABLE_PROMPT_MANAGEMENT=true

# ===================================
# 보안 설정 (프로덕션)
# ===================================
# API 키 활성화
ENABLE_API_KEY=false

# API 키 (활성화 시 필수)
API_KEY=

# 요청 서명 활성화
ENABLE_REQUEST_SIGNING=false

# 저장 시 암호화
ENABLE_ENCRYPTION_AT_REST=false

# ===================================
# 모니터링
# ===================================
# CloudWatch 메트릭 활성화
CLOUDWATCH_METRICS_ENABLED=false

# CloudWatch 로그 보관 기간 (일)
CLOUDWATCH_LOGS_RETENTION=7

# ===================================
# 백업 설정 (프로덕션)
# ===================================
# 백업 활성화
BACKUP_ENABLED=false

# 백업 보관 기간 (일)
BACKUP_RETENTION_DAYS=7

# 백업 스케줄 (cron 표현식)
BACKUP_SCHEDULE="cron(0 3 * * ? *)"